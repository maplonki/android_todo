<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/task_detail_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Take out the trash" />

    <TextView
        android:id="@+id/task_detail_tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_detail_tv_description"
        android:gravity="end"
        android:padding="8dp"
        android:textSize="16sp"
        tools:text="Today" />


    <TextView
        android:id="@+id/task_detail_tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="18dp"
        android:text="Unable to find task with id"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>